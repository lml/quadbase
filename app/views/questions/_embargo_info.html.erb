<%# Clients of this partial must provide the following variable:
  # question %>

<% if question.is_embargoed? %>
  <%= link_to "Embargoed" +\
              (question.embargo_until.nil? ? "" : " until " + question.embargo_until.strftime('%Y-%m-%d %l:%M:%S %p %Z')),
              question_embargo_path(question), :remote => true %>
<% else %>
  <%= link_to "Embargo this question", question_embargo_path(question), :remote => true %>
<% end %>
