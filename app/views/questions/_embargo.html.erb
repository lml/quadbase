<%# Clients of this partial must pass the following variables:
  # question %>

Embargo until (UTC):

<br/>

<%= form_tag question_embargo_time_path(question), :remote => true,
                                                   :method => 'put' do %>
  <%= datetime_text_field_tag "embargo_until", question.embargo_until.strftime('%Y-%m-%d %l:%M:%S %p') %>
  <br/><br/>
  <%= submit_tag "OK", :class => "#{submit_classes}" %>
<% end %>
