<%= pageHeading("Question #{@question.to_param}")%>


<%= render :partial => 'show', :locals => {:main_question => @main_question,
                                           :question => @question,
                                           :answer_text => @answer_text,
                                           :answer_confidence => @answer_confidence} %>

<div id="answer_choices_div">
  <%= render :partial => 'answer_choices', :locals => {:main_question => @main_question,
                                                       :question => @question,
                                                       :answer_choice => @answer_choice} %>
</div>

<div id="solutions_and_navigation_div">
  <%= render :partial => 'solutions_and_navigation',
             :locals => {:solutions => @solutions,
                         :list => @list,
                         :next_question => @next_question,
                         :next_part => @next_part} %>
</div>
