<%# Callers must supply a 'user' local variable %>

<%= form_for ListMember.new, 
             :url => list_list_members_path(@list), 
             :method => :post, 
             :remote => true do |f| %>
  <%= f.hidden_field :username, :value => user.username %>
  <%= f.submit "Add", :class => submit_classes, :onclick => please_wait_js %>
<% end %>