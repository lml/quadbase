<%= display_flash %>

$('#question_part_dialog').dialog("close");

<% if @multipart_question.errors.blank? %>

<%= update_multipart_nav(@multipart_question, @multipart_question, true) %>

$("#question_part_rows").html(
   "<%= escape_javascript(render(:partial => 'multipart_questions/question_part_rows', 
                                 :locals => {:question => @multipart_question})) %>");
                                 
// Change the intro field and its form ID

$("#intro_field").val("<%= @multipart_question.question_setup.content %>").attr("disabled", <%= !@multipart_question.setup_is_changeable? %>);

$("#question_question_setup_attributes_id").val("<%= @multipart_question.question_setup.id %>");
<% end %>
